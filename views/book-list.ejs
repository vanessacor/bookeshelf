<%- include('head'); -%>
<body>
  <%- include('header'); -%>
<div class="book-list">

  <% bookList.forEach(function(book) { %>
    <div class="book-card-wrapper">
      <article class="book-card">
        <header class="card-title">
          <h3><a href="<%= book.url %>"><%= book.title %></a></h3>
          <button class="icon delete-book">
            <a href="<%= book.url %>/delete">
              <i class="far fa-trash-alt"></i>
            </a>
          </button>
        </header>
        <div class="book-details">
          <h3>Author:</h3>
          <p class="book-author"><%= book.author.name %></p>
          <h3>Genre:</h3>
          <p class="book-genre">
            <% book.genre.forEach(function(genre) {
            %>
              <span><%= genre.name %></span>
            <% }) %>
          </p>
        </div>
        <footer>
          <button class="button status-button"><%= book.status %></button>
          <button class="icon edit-book">
            <a href="<%= book.url %>/update">
              <i class="far fa-edit"></i>
            </a>
          </button>
        </footer>
      </article>
    </div>
  <% }) %>

</div>
  <%- include('footer'); -%>
</body>
</html>